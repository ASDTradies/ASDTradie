        <h3 class="text-center" id="register-alert"></h3>
      </div>

      <div class="register-main d-flex justify-content-center align-items-center custom-control custom-switch">
          <form id="register-form" action="/users/registerUser" method="POST">
            <%- include ('./partials/alerts.ejs') %>
            <label for="email" class="visually-hidden">Email:</label>
              <input type="email" name="email" id="email" placeholder="Email address" required><br>
      
              <label for="first_name" class="visually-hidden">First name:</label>
              <input type="text" name="first_name" id="first_name" placeholder="First name" required>
      
              <label for="last_name" class="visually-hidden">Last name:</label>
              <input type="text" name="last_name" id="last_name" placeholder="Last name"><br>
      
              <label for="password" class="visually-hidden">Password:</label>
              <input type="password" name="password" id="p1" placeholder="Password">
  
              <label for="confirm_password" class="visually-hidden">Confirm Password:</label>
              <input type="password" name="password2" id="p2" placeholder="Confirm password"><br>
              
              <div class="d-flex justify-content-center gap-2 mb-1">
                <input type="checkbox" name="profileChar" id="profileChar">
                <label for="profiletype">I want to be a TradeTrades' Tradie</label><br>
              </div>
              
              <div class="d-flex flex-column justify-content-center align-items-center">
                <input type="submit" value="Create Account" class="btn-primary btn-lg btn-primary mb-0"></button><br>
                <p class="text-center">Already have an account? <a href="/views/login.ejs">Sign in</a></p>
              </div>
          </form>
