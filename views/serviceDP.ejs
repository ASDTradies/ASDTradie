<script >
  // get the reviews for a specific service by serviceId
document.addEventListener('DOMContentLoaded', async function(){
  let serviceId = document.querySelector('.serviceId').value;
  let reviews = await fetch(`/reviewsDP?serviceId=${serviceId}`).then(res => res.json()).then(data => data);
  let reviewsList = document.querySelector('.reviewsList');
  reviewsList.innerHTML = '';
  reviews.forEach(review => {
      let reviewHTML = `
      <div class="card reviewCard mb-2" >
        <img class="card-img-top" src="https://image.shutterstock.com/image-vector/user-icon-vector-trendy-flat-600w-1720665448.jpg" alt="Card image cap">
        <div class="card-body">
          <h5 class="card-title">${review.reviewName}</h5>
          <p class="card-text">${review.review}</p>
        </div>
      </div>`;
      reviewsList.insertAdjacentHTML('beforeend', reviewHTML);
  })



});
</script>

